{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "viewer",
        "ui",
        "panels",
        "hooks",
        "types",
        "lib",
        "stores",
        "config",
        "deps"
      ]
    ],
    "scope-empty": [1, "never"],
    "subject-case": [2, "always", "lower-case"]
  }
}
